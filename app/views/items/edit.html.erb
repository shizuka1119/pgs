<div class="main items-new">
  <div class="container">
    <h1 class="form-heading">Note Edit</h1>
    <%= form_for(@item) do |f| %>
      <div class="form">
        <div class="form-body">
           <div class="form-error">
              <% @item.errors.full_messages.each do |message| %>
              <%= message %>
              <% end %>
            </div>
          <p>Title</p>
            <%= f.text_field :title %>
          <p>Category</p>
            <%= f.text_field :category %>
          <p>Note</p>
            <%= f.text_area :body %>
          <%= link_to "Delete", destroy_item_path,{method: :delete} %>
          <%= f.submit 'Save' %>
        </div>
      </div>
    <% end %>
  </div>
</div>