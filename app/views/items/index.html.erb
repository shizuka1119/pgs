<h1>記事一覧</h1>

<table class="table">
		<thead class="thead-light">
			<tr class="active">
				<th>記事ID</th>
				<th>タイトル</th>
				<th>ジャンル</th>
				<th>内容</th>
			</tr>
		</thead>
		<% @items.each do |item| %>
		<tbody>
			<tr>
				<td><%= link_to item.id,item_path(item) %></td>
				<td><%= item.title %></td>
				<td><%= item.category %></td>
				<td><%= item.body %></td>
			</tr>
		</tbody>
		<% end %>
</table>