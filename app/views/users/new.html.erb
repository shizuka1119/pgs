<div class="main users-new">
  <div class="container">
    <div class="form-heading">Signup</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        ã€€<%= form_for(@user) do |f| %>
          <p>Name</p>
          <%= f.text_field :name %>
          <p>Email</p>
          <%= f.email_field :email %>
          <p>Password</p>
          <%= f.password_field :password %>
          <%= f.submit 'Save' %>
        <% end %>
      </div>
    </div>
  </div>
</div>