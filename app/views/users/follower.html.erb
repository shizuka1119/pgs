<div class="main user-show">
  <div class="container">
    <div class="user">
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image %>
      <% end %>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to "Edit", edit_user_path %>
      <% end %>
    </div>
    <ul class="user-tabs">
      <li><%= link_to "Note", user_path %></li>
      <li><%= link_to "Good", like_users_path %></li>
      <li><%= link_to "Following", following_users_path %></li>
      <li class="active"><%= link_to "Follower", follower_users_path %></li>
    </ul>
    <% @relationships.each do |r| %>
      <% user = User.find_by(id: r.user_id) %>
      <div class="items-index-item">
        <div class="item-left">
          <% if r.user.profile_image.attached? %>
            <%= image_tag r.user.profile_image %>
          <% end %>
        </div>
        <div class="item-right">
          <div class="item-user-name">
            <%= link_to r.user.name, user_path(r.user) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>