<div class="main users-edit">
  <div class="container">
    <div class="form-heading">User Edit</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
      ã€€<%= form_for(@user) do |f| %>
          <p>Name</p>
          <%= f.text_field :name %>
          <p>Mail</p>
          <%= f.email_field :email %>
          <p>Profile image</p>
          <%= f.file_field :profile_image%>
          <%= f.submit 'Save' %>
          <p><%= link_to "Account Delete", destroy_user_path, method: :delete %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
